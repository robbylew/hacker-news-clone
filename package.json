{
  "name": "hackernews",
  "version": "0.9.0",
  "description": "A hacker news clone built from the ground up to demonstrate React and GraphQL",
  "scripts": {
    "clean": "rm -rf dist && rm -rf ./.next",
    "build": "npm run clean && next build && tsc --project tsconfig-server.json",
    "build:prod": "cross-env NODE_ENV=production npm run build",
    "build:static-website": "rm -rf build/static && cross-env NODE_ENV=production next build && next export",
    "debug": "cross-env DEBUG=app:* npm start",
    "debug:all": "cross-env DEBUG=* npm start",
    "debug:inspect": "cross-env DEBUG=app* TS_NODE_COMPILER_OPTIONS={\\\"module\\\":\\\"commonjs\\\"} node --inspect -r ts-node/register server/server.ts --project tsconfig-server.json",
    "debug:inspect-prod": "cross-env DEBUG=app* NODE_ENV=production node --inspect dist/server/server.js",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
    "prettier:check": "prettier --check .",
    "prettier:format": "prettier --write .",
    "tsc:check": "tsc --noEmit",
    "start": "nodemon",
    "start:prod": "cross-env NODE_ENV=production node dist/server/server.js"
  },
  "author": "Robert Lewis",
  "license": "Apache-2.0",
  "keywords": [
    "hacker-news",
    "clone",
    "react",
    "graphql"
  ],
  "dependencies": {
    "@apollo/client": "^3.11.8",
    "@graphql-tools/utils": "^10.5.5",
    "apollo-server-express": "^3.13.0",
    "body-parser": "^1.20.3",
    "cookie": "^1.0.1",
    "cookie-parser": "^1.4.7",
    "cross-env": "7.0.3",
    "debug": "^4.3.7",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-session": "^1.18.1",
    "firebase": "^10.14.1",
    "graphql": "^16.9.0",
    "html-react-parser": "^5.1.18",
    "lru-cache": "^11.0.1",
    "next": "^14.2.15",
    "passport": "^0.7.0",
    "passport-local": "1.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.0",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.12.0",
    "@testing-library/react": "^16.0.1",
    "@types/body-parser": "1.19.2",
    "@types/cookie": "0.4.1",
    "@types/cookie-parser": "1.4.2",
    "@types/debug": "4.1.7",
    "@types/express": "^5.0.0",
    "@types/express-session": "1.17.4",
    "@types/node": "^22.7.5",
    "@types/passport": "^1.0.16",
    "@types/passport-local": "1.0.34",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.9.0",
    "@typescript-eslint/parser": "^8.9.0",
    "depcheck": "^1.4.7",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.1",
    "globals": "^15.11.0",
    "mockdate": "3.0.5",
    "nodemon": "^3.1.7",
    "postcss": "^8.4.47",
    "postcss-preset-env": "^10.0.7",
    "prettier": "^3.3.3",
    "ts-node": "^10.4.0",
    "typescript": "^5.6.3"
  }
}
